<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana2_BelenCh.Registro">
    
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <Label Text="Iniciar sesión"
                 
                HorizontalOptions="CenterAndExpand" />
            <Image Source="https://www.socialwibox.es/wp-content/uploads/2020/11/social-login.jpg"/>

            <Entry x:Name="txtNombre" Placeholder="Ingrese su usuario"/>
            <Entry x:Name="txtClave" Placeholder="Ingrese su contrasena" IsPassword="True"/>

            <Button x:Name="btnIniciar" Text="INICIAR SESIÓN" Clicked="btnIniciar_Clicked"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>